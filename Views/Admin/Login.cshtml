
@{
    Layout = "Shared/_LayoutPageLogin.cshtml";
    ViewBag.Title = "Login Admins";
}



@model DigitalnaApoteka.ViewModel.AdminViewModel.AdminViewModel


<div id="headerLogin">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <h1 class="text-center">Login-Administrator</h1>
            </div>
        </div>
    </div>
</div>
<div id="sectionLogin">
    <div class="container">
        <div class="row">
            <div class="col-md-4" style="margin-left:33.3%">
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "well" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", style = "background-color:#ffffcc" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "background-color:#ffffcc" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block" style="background-color:#ffff00">Logovanje</button>
                    </div>
                    
                    if (ViewData["loginerror"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show text-center" role="alert" style="margin-top:10px">
                            <p>@ViewData["loginerror"]</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<div id="footerLogin">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                Copyright Borislav Nikolic, @@ @DateTime.Today.Year
            </div>
        </div>
    </div>
</div>
