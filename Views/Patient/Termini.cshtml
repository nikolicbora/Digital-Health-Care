@model List<DigitalnaApoteka.Models.Termin>

@{
    Layout = "Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Termini";
}

<h2>Termini</h2>


@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <tr>
            <th>
                Datum:
            </th>
            <th>
                Pocetak:
            </th>
            <th>
                Kraj:
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TerminPocetak.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @item.TerminPocetak.ToString("HH:mm")
                </td>
                <td>
                    @item.TerminKraj.ToString("HH:mm")
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>Nema zakazanih termina</p>
}

