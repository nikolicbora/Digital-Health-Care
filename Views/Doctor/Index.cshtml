@{

    Layout = "Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Lekar panel";
    Lekar l = (Lekar)ViewData["lekar"];
    
}



<div class="panel panel-default">
    <div class="panel-heading" style="background-color:#e74c3c">
        <h1 class="panel-title">Licni Podaci</h1>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <td><strong>Ime:</strong></td>
                <td>@l.Ime</td>
            </tr>
            <tr>
                <td><strong>Prezime:</strong></td>
                <td>@l.Prezime</td>
            </tr>
            <tr>
                <td><strong>Username:</strong></td>
                <td>@l.Username</td>
            </tr>
            <tr>
                <td><strong>Datum Rodjenja:</strong></td>
                <td>@l.DatumRodjenja.ToString("dd-MM-yyyy")</td>
            </tr>
            <tr>
                <td><strong>Pol:</strong></td>
                <td>@{string pol = l.Pol.Equals("m") ? "muski" : "zenski";}<span>@pol</span></td>
            </tr>
            <tr>
                <td><strong>Telefon:</strong></td>
                <td>@l.Telefon</td>
            </tr>
            <tr>
                <td><strong>Mail:</strong></td>
                <td>@l.Mail</td>
            </tr>
            <tr>
                <td><strong>Klinika:</strong></td>
                <td>
                    @using (DigitalnoZdravstvoEntities db = new DigitalnoZdravstvoEntities())
                    {
                        @db.Lekars.Find(l.Username).Klinika.Naziv
                    }
                 </td>
            </tr>
            <tr>
                <td><strong>Sprat:</strong></td>
                <td>@l.Sprat</td>
            </tr>
        </table>
    </div>
</div>
