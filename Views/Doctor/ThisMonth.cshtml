
@{
    ViewBag.Title = "Ovogodisnji termini";
    Layout = "~/Views/Doctor/Shared/_LayoutPage.cshtml";
}
<script>
    function GetRaspored() {
         $.ajax({
                    type: "POST",
             url: "/Doctor/WorkMonth",
             data: '{mesec: "' + $("select[name='mesec'] option:selected").val() + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#raspored').html(response);
                        //$('#dialog').dialog('open');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
          });
    }
</script>

<h2>Rasporedi po mesecima za godinu @DateTime.Now.Year</h2>


    <div class="form-group">
        <label for="mesec">Mesec</label>
        <select class="form-control" name="mesec">
            <option value="1">Januar</option>
            <option value="2">Februar</option>
            <option value="3">Mart</option>
            <option value="4">April</option>
            <option value="5">Maj</option>
            <option value="6">Jun</option>
            <option value="7">Jul</option>
            <option value="8">Avgust</option>
            <option value="9">Septembar</option>
            <option value="10">Oktobar</option>
            <option value="11">Novembar</option>
            <option value="12">Decembar</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-success" onclick="GetRaspored()">Raspored</button>
    </div>

<div id="raspored">

</div>